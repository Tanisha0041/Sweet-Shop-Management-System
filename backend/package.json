    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.1.14",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.17",
    "typescript": "^5.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
